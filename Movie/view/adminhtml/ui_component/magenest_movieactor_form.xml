<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">magenest_movieactor_form.magenest_movieactor_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Movie Actor Information</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="movie/movieactor/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="movie/movieactor/save"/>
                <class>primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>magenest_movieactor_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>magenest_movieactor_form.magenest_movieactor_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="magenest_movieactor_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="movie/movieactor/save"/>
        </settings>
        <dataProvider class="Magenest\Movie\Model\Config\MovieActorDataProvider" name="magenest_movieactor_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>movie_actor_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">Movie Aactor Details</label>
        </settings>

        <field name="movie_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Movie</label>
                <dataScope>movie_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magenest\Movie\Model\Config\Source\MovieIdSelect"/>
                    </settings>
                </select>
            </formElements>
        </field>
<!---->
        <field name="actor_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Actor</label>
                <dataScope>actor_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magenest\Movie\Model\Config\Source\ActorIdSelect"/>
                    </settings>
                </select>
            </formElements>
        </field>

    </fieldset>
</form>
